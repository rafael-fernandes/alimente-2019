<div class="basis-plena">
  <div class="header">
    <div class="container h-100 d-flex justify-content-center">
      <div class="title align-self-center">
        BASIS PLENA
      </div>
    </div>
  </div>

  <div class="container video">
    <div class="title">
      <%= @video.number %>. <%= @video.title %>
    </div>

    <iframe width="100%" height="500px" src="https://www.youtube.com/embed/<%= @video.video_url %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

    <div class="description">
      <%= @video.description.html_safe %>
    </div>

    <%= link_to 'VOLTAR À LISTA DE VÍDEOS', :back, class: 'btn btn-outline-info' %>
  </div>

  <%= render 'cta' %>
</div>