<div class="basis-plena">
  <div class="header">
    <div class="container h-100 d-flex justify-content-center">
      <div class="title align-self-center">
        BASIS PLENA
      </div>
    </div>
  </div>

  <% if notice %>
    <div class="alert alert-success">
      <div class="container">
        <%= notice %>

        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  <% end %>

  <div class="container videos">
    <div class="sub-title">
      Seja bem-vindo a série de aulas exclusivas para os participantes do Evento Alimente 2019.
    </div>

    <div class="table-responsive">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>Nº</th>
            <th>Título</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @videos.each do |video| %>
            <tr>
              <td>
                <strong><%= video.number %></strong>
              </td>
              <td><%= video.title %></td>
              <td align="right"><%= link_to 'ASSISTIR VÍDEO', basis_plena_video_path(video), class: 'btn btn-warning btn-sm' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= render 'cta' %>
</div>